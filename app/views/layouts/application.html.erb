<!DOCTYPE html>
<html>
  <head>
    <title>Blog3</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div id="main_content">
			<div class="sidebar">
				<div id="icon">
					<%= link_to root_path do %>
						<%= image_tag "ic2c.png", :class => "icon"%>
					<% end %>
				</div>
				<ul>
					<li class="category">WEBSITE</li>
					<li><%= link_to "Blog", root_path %></li>
				</ul>
				<ul>
					<li class="category">SOCIAL</li>
					<li><a href="https://facebook.com.tw">Facebook</a></li>
					<li><a href="https://google.com.tw">Google</a></li>
          <li><a href="https://github.com">Github</a></li>
				</ul>

				<% if !user_signed_in? %>
					<div class="log_in">
						<%= link_to "Login",new_session_path(:user) %>
					</div>
				
				<% elsif user_signed_in? %>
					<div class="log_in">
						<%= link_to "Log Out", destroy_user_session_path, :method => :delete %>
					</div>
					<div class="user_name">
						<%= current_user.email%>
					</div>
				 <% end %>
				
			</div>

			<%if user_signed_in? %>
				<div class="buttons">
					<button id="button"><%= link_to"New Posts", new_post_path %></button>
				</div>
			<% end %>
				
				<% flash.each do |name,msg|%>
					<div class = "alert"><%= msg %></div>
				<% end %>
		
	    <%= yield %>
	  </div>
  </body>
</html>

