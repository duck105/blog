<!DOCTYPE html>
<html>
  <head>
    <title>Blog3</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div id="main_content">
			<div class="sidebar">
				<div id="icon">
					<%= link_to root_path do %>
						<%= image_tag "ic2c.png"%>
					<% end %>
				</div>
				<ul>
					<li class="category">WEBSITE</li>
					<li><%= link_to "Blog", root_path %></li>
				</ul>
				<ul>
					<li class="category">SOCIAL</li>
					<li><a href="https://facebook.com.tw">Facebook</a></li>
					<li><a href="https://google.com.tw">Google</a></li>
				</ul>
			</div>




	  	<button id="button"><%= link_to"New Posts", new_post_path %></button>
				
				<% flash.each do |name,msg|%>
					<div class = "alert"><%= msg %></div>
				<% end %>
		
	    <%= yield %>
	  </div>
  </body>
</html>

